# Developed by Elakkiya

# Initial task list
tasks = [
    "ğŸ” Complete CodSoft Task 1",
    "âœï¸ Write report for Task 2",
    "ğŸ“¹ Upload LinkedIn post for internship",
    "ğŸ¨ Design UI for weather app",
    "ğŸ“§ Send daily internship update email"
]

def show_menu():
    print("\n======= TO-DO LIST MENU =======")
    print("1. View All Tasks")
    print("2. Add New Task")
    print("3. Mark Task as Completed")
    print("4. Delete a Task")
    print("5. Exit")
    print("================================")

def view_tasks():
    if not tasks:
        print("ğŸ“­ No tasks in your list.")
    else:
        print("\nğŸ“ Your To-Do List:")
        for i, task in enumerate(tasks, 1):
            print(f"{i}. {task}")

def add_task():
    task = input("Enter your new task: ").strip()
    if task:
        tasks.append(task)
        print(f"âœ… Task '{task}' added.")
    else:
        print("âš ï¸ Task cannot be empty!")

def complete_task():
    view_tasks()
    if tasks:
        try:
            index = int(input("Enter the task number to mark as completed: "))
            if 1 <= index <= len(tasks):
                done = tasks.pop(index - 1)
                print(f"ğŸ‰ Task '{done}' marked as completed!")
            else:
                print("âŒ Invalid task number.")
        except ValueError:
            print("âŒ Please enter a valid number.")

def delete_task():
    view_tasks()
    if tasks:
        try:
            index = int(input("Enter the task number to delete: "))
            if 1 <= index <= len(tasks):
                removed = tasks.pop(index - 1)
                print(f"ğŸ—‘ï¸ Task '{removed}' deleted.")
            else:
                print("âŒ Invalid task number.")
        except ValueError:
            print("âŒ Please enter a valid number.")

# ğŸŒ€ Main program loop
while True:
    show_menu()
    choice = input("Choose an option (1-5): ").strip()

    if choice == '1':
        view_tasks()
    elif choice == '2':
        add_task()
    elif choice == '3':
        complete_task()
    elif choice == '4':
        delete_task()
    elif choice == '5':
        print("ğŸ‘‹ Exiting... Stay productive, Elakkiya!")
        break
    else:
        print("âŒ Invalid choice. Please enter 1 to 5.")
